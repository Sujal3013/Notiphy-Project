<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        android:theme="@style/View"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/priority"
            android:elevation="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:layout_margin="8dp"
            android:background="@drawable/dot_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_bold"
                android:text="Title"
                android:id="@+id/itemtitle"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/itemsubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_regular"
                android:maxLines="1"
                android:text="Sub-topic"
                android:textColor="#E8E3E3"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/itemnote"
                android:fontFamily="@font/productsans_regular"
                android:text="jcnchcoijldnfcb jjckncoijdnkncclkcca xsnsisd kdnoapapadqdkll"
                android:textColor="#D8D8D8"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_bold"
                android:text="17 January 2023"
                android:id="@+id/notedate"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:maxLines="1"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>